<template id="product_cart">
            <t t-set="website_sale_order" t-value="website.sale_get_order()"/>           
            <span>
            <span class="my_cart_quantity" t-esc="website_sale_order and website_sale_order.cart_quantity or '0'"/>
            item(s) <i class="fa fa-shopping-cart"></i> <span class="fa fa-angle-down"></span></span>
            <div t-if="not website_sale_order or not website_sale_order.website_order_line" class="">
                Your cart is empty!
            </div> 
            <t t-if="website_sale_order and website_sale_order.website_order_line">                      
              <ul>
                <t t-foreach="website_sale_order.website_order_line" t-as="line">          
                <li t-if="line.product_id and line.product_id.product_tmpl_id">
                <div class="hci-row">
                  <span class="img"><a t-attf-href="/shop/product/#{ slug(line.product_id.product_tmpl_id) }">
	              <span t-field="line.product_id.image_small"
	                    t-options='{"widget": "image", "class": "img-responsive"}'/>                   
                   </a></span>
                  <div class="hm-cart-info">
                    <label class="name"><a t-attf-href="/shop/product/#{ slug(line.product_id.product_tmpl_id) }">
						<strong t-esc="line.product_id.with_context(display_default_code=False).display_name"/>					
					</a></label>
                    <label class="quantity"><t t-esc="line.product_uom_qty"/> x </label>
                    <label class="total"><span t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}"  t-field="line.price_unit" style="white-space: nowrap;" /></label>                   
                  </div>
                  </div>
                </li>
                </t>
                  <div class="summary">                
                      <p class="total">
                        <span class="label" style="color:#000">Total:</span>
                        <span class="price" t-field="website_sale_order.amount_total" style="white-space: nowrap;" t-options='{"widget": "monetary", "display_currency": website_sale_order.pricelist_id.currency_id}' />
                      </p>
                    </div>
                    <div class="actions">
                      <div class="view-cart"><a href="/shop/cart">Checkout</a></div>
                    </div>
          </ul>
          </t>
         
</template> 
